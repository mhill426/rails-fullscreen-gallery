<%= form_for(@slide) do |f| %>
  <% if @slide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slide.errors.count, "error") %> prohibited this slide from being saved:</h2>

      <ul>
      <% @slide.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %><!-- errors -->
<form class="form-inline">
  <div class="form-group">
    <%= image_tag(@slide.image_url, class: "col-xs-8") if @slide.image? %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.text_field :caption, label: false, placeholder: "Caption", class: 'form-control input-md' %>
  </div>  
  <label>
    <%= f.check_box :remove_image %>
    Remove image
  </label>
  <div class="row">
    <div class="col-xs-12 col-md-12 form-group">  
    <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
</form>  
<% end %>
